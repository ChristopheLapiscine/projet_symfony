{% trans_default_domain 'FOSUserBundle' %}





<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Enregistrez-vous</h3>
            </div>
            <div class="card-body">
                <form action="{{ path('fos_user_registration_register') }}" method="POST" class="fos_user_registration_register">

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input placeholder="Nom" {{ form_widget(form.nom) }}

                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input placeholder="Prenom" {{ form_widget(form.prenom) }}
                        </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input placeholder="Mot de passe" {{ form_widget(form.avatar) }}

                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>

                        <div>
                            <input type="submit" value="{{ 'registration.submit'|trans }}" />
                        </div>

                    </div>
                    <div class="row align-items-center remember">

                    </div>
                    <div class="form-group">

                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">

                </div>
                <div class="d-flex justify-content-center">

                </div>
            </div>
        </div>
    </div>
</div>
