{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset("assets/css/listeCoach.css") }}">{% endblock %}

{% block content %}


<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb40 text-center mt-4">
        <h1>Liste Coach</h1>
    </div>
</div>
    <div class="content">
        <div class="container">
            <div class="row">
    {% for coach in coaches %}
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12">
                        <!-- team-img -->
                        <div class="team-block">
                            <div class="team-img">
                                <img src="{{ asset('uploads/coach/'~coach.avatar) }}" alt="">
                                <div class="team-content">
                                    <h4 class="text-white mb0">{{ coach.price }}</h4>
                                    <p class="team-meta">- {{ coach.price }} €</p>
                                </div>
                                <div class="overlay">
                                    <div class="text">
                                        <h4 class="mb0 text-white">{{ coach.price }}</h4>
                                        <p class="mb30 team-meta">- {{ coach.price}} €</p>
                                        <p>{{ coach.description }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                        <div>
                            <a href="{{ path('admin_coach_show', { 'id': coach.id }) }}" class="btn btn-primary">Voir</a>
                            <a href="{{ path('admin_coach_edit', { 'id': coach.id }) }}" class="btn btn-primary">Editer</a>
                        </div>

        {% endfor %}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb40 text-center mt-4">
            <h3><a href="{{ path('admin_coach_new') }}">Creer un coach</a></h3>
        </div>
    </div>

{% endblock %}
