{% extends 'base.html.twig' %}

{% block content %}
    <h1>Coach</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ coach.id }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ coach.price }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ coach.avatar }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if coach.createdAt %}{{ coach.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if coach.updatedAt %}{{ coach.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_coach_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_coach_edit', { 'id': coach.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
