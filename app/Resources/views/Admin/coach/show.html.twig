{% extends 'adminBase.html.twig' %}

{% block content %}
    <h1>Coach</h1>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                {% if coach.avatarName %}
                    <img src="{{ asset('assets/avatar/coach/'~coach.avatarName) }}" alt=""
                         style="height: 360px; width: 560px">
                {% else %}
                    <img src="{{ asset('assets/img/login.jpg') }}" alt="" style="height: 360px; width: 560px">
                {% endif %}
            </div>
            <div class="col-md-4">
                {# <h1>{{ coach.username }}</h1>#}
            </div>
        </div>
    </div>

    <p class="ml-4">{{ coach.description }}</p>

    <div class="row ml-4">
        <div class="col-md-8">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Prix</th>
                    <td>{{ coach.price }} â‚¬</td>
                </tr>
                <tr>
                    <th>Sport</th>
                    <td>Sport du coach</td>
                </tr>
                <tr>
                    <th>Createdat</th>
                    <td>{% if coach.createdAt %}{{ coach.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Updatedat</th>
                    <td>{% if coach.updatedAt %}{{ coach.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <a href="{{ path('admin_coach_edit', { 'id': coach.id }) }}" class="btn btn-primary ml-5">Edit</a>
        <a href="{{ path("admin_coach_delete", {'id': coach.id}) }}"><input type="submit" value="Delete" class="btn btn-danger ml-2 mr-2"></a>
        <button><a href="{{ path('admin_coach_index') }}">Back to the list</a></button>
    </div>

{% endblock %}
