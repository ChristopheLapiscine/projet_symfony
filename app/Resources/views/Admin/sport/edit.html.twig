{% extends 'crudAdminBase.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb40 text-center mt-4">
            <h1>Editer Sport</h1>

        </div>
    </div>

    {{ form_start(edit_form) }}
    <div class="container">
        <div class="row">
            <div class="col">
                {{ form_label(edit_form.name, 'Nom') }}
                {{ form_errors(edit_form.name) }}
                {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <div class="row">
            {{ form_widget(edit_form) }}
            <input type="submit" value="Editer" class="btn btn-primary ml-3"/>
            <button><a href="{{ path('admin_sport_index') }}">Back to the list</a></button>
        </div>
    </div>

    {{ form_end(edit_form) }}


{% endblock %}
